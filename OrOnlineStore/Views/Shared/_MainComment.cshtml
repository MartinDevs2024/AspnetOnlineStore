@model OrOnlineStore.Models.ViewModels.CommentViewModel

@{

}

<style>
    .post__comments {
        display: flex;
        flex-direction: column;
        margin-top: 10px;
    }

    .post__input {
        flex: 1;
        border: none;
        padding: 10px;
        border-top: 1px solid lightgray;
    }

    .post__button {
        flex: 0;
        border: none;
        border-top: 1px solid lightgray;
    }
</style>

<div>
    <form method="post" asp-controller="Post" asp-action="Comment" class="post__comments">
        <input asp-for="PostId" type="hidden" />
        <input asp-for="MainCommentId" type="hidden" />
        <input class="post__input" asp-for="Message" placeholder="Add a comment..." />
        <button class="post__button" type="submit">Submit</button>
    </form>
</div>